<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewLoanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Loan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount: $250,000.00"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewRemainingBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: $225,000.00"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate: 3.5%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewMonthlyPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly: $1,250.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewNextPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Payment: Dec 25, 2025"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonMakePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
