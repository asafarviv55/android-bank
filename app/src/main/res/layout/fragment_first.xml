<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alfa Bank"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to your Digital Banking"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Accounts"
            android:onClick="openAccountList"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:onClick="openTransactionHistory"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fund Transfer"
            android:onClick="openFundTransfer"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Management"
            android:onClick="openCardManagement"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loan Management"
            android:onClick="openLoanManagement"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Beneficiaries"
            android:onClick="openBeneficiaryManagement"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill Payment"
            android:onClick="openBillPayment"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fixed Deposit"
            android:onClick="openDeposit"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATM Locator"
            android:onClick="openATMLocator"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Investment Portfolio"
            android:onClick="openInvestmentPortfolio"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>
